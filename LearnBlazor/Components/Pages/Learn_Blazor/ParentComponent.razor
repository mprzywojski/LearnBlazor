@page "/learnBlazor/parentComponent"

<h3>ParentComponent</h3>

@* kaskadowo nadpisuje typ 'value' wiec trzeba nadac 'name' jesli chce sie miec rozne typy *@
<CascadingValue Value="@MessageForGrandChild" Name="Message">
    <CascadingValue Value="@LuckyNumber" Name="LuckyNumber">
        <_ChildComponent @ref="childComp" OnButtonClick="ShowMessage" Title="This title is passed as a parameter from Parent Component">
            @* MessageForGrandChild="The message is passed from Parent Component to Grand Child" *@
            <ChildSomeContent>Some text between the Tags from Parent Component!!</ChildSomeContent>
            <ChildContent>
                <p>Some Text insine the ChildContent from Parent Component!!</p>
                <br />
                <p class="text-primary">Some other text</p>
            </ChildContent>
        </_ChildComponent>
    </CascadingValue>
</CascadingValue>

<p>@messageText</p>

<div class="row">
    <button class="btn btn-success" @onclick="() => childComp.ToastrSuccess()">Show Toastr</button>
</div>

@code {
    private _ChildComponent childComp;
    private string MessageForGrandChild = "This message is passed from Parent Component to Grand Child";
    private int LuckyNumber = 7;
    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "Button inside child component was clicked";
    }
}
